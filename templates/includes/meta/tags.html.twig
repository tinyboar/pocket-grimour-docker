<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="copyright" content="{{ meta_copyright|default('Skateside') }}">
<meta name="robots" content="{{ meta_robots|default(app.environment == 'prod' ? 'index,follow' : 'noindex,nofollow') }}">
<meta name="author" content="{{ meta_author|default('Skateside') }}">
<meta name="revisit-after" content="{{ meta_revisit|default('30 days') }}">
<meta name="description" content="{{ meta_description|default('') }}">
